function out = topoconn_av(Fp,out,subj,freq)
temp=freq{1};
cfg.layout='/home/lspyrou/Documents/ls_brain/global/biosemi128.lay';
% cfg.layout='C:\Users\Loukianos\Documents\ls_brain\global\biosemi128.lay';
cfg.parameter='powspctrm';
cfg.comment='no';
figure

for i=1:size(out,1)
    for j=1:size(out,2)   
        if (i~=j)
        
            Xi=Fp{subj}{2}(:,i);
            Xj=Fp{subj}{2}(:,j);
            CX=out(i,j)*Xi*Xj';
            
        end            
    end
end

